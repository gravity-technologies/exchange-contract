{
  "name": "grvtex",
  "version": "0.0.1",
  "description": "GRVT Exchange Smart Contract",
  "type": "commonjs",
  "author": "GRVT <engineers@grvt.io>",
  "license": "UNLICENSED",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "solhint -f table contracts/**/*.sol --ignore-path .solhintignore",
    "lint:quiet": "solhint -q contracts/**/*.sol",
    "compile": "hardhat compile",
    "test:hardhat": "hardhat test --network hardhat",
    "test:forge": "forge test -vv",
    "prettier:check": "prettier --check --plugin=prettier-plugin-solidity contracts/**/*.sol",
    "prettier:sol": "prettier --write --plugin=prettier-plugin-solidity contracts/**/*.sol",
    "prettier": "prettier --write ./**/*.ts",
    "sizer": "forge build --sizes",
    "deploy": "hardhat deploy-zksync --script deploy.ts",
    "deploy:upgradable": "hardhat deploy-zksync --script deployupgradable.ts",
    "deploy:upgrade": "hardhat deploy-zksync --script upgrade.ts",
    "execute": "hardhat deploy-zksync --script",
    "clean": "hardhat clean",
    "draw": "surya inheritance -i contracts/exchange/GRVTExchange.sol | dot -Tpng > analysis/GRVTExchange.png",
    "dependencies": "surya dependencies -i GRVTExchange contracts/exchange/GRVTExchange.sol > analysis/c3linearization.txt"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-chai-matchers": "^1.2.1",
    "@matterlabs/hardhat-zksync-deploy": "^0.7.0",
    "@matterlabs/hardhat-zksync-node": "^0.0.1",
    "@matterlabs/hardhat-zksync-solc": "^1.1.4",
    "@matterlabs/hardhat-zksync-upgradable": "^0.2.2",
    "@matterlabs/hardhat-zksync-verify": "^0.4.0",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@metamask/eth-sig-util": "^7.0.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^7.0.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.4.5",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.2",
    "zksync-ethers": "^5.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1"
  }
}
