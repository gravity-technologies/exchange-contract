{
  "name": "grvtex",
  "version": "0.0.1",
  "description": "GRVT Exchange Smart Contract",
  "type": "commonjs",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "lint": "solhint -f table src/**/*.sol",
    "lint:quiet": "solhint -q src/**/*.sol",
    "codegen": "yarn build && node scripts/geneip712.js",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "forge": "forge test",
    "prettier:check": "prettier --check --plugin=prettier-plugin-solidity src/**/*.sol",
    "prettier:sol": "prettier --write --plugin=prettier-plugin-solidity src/**/*.sol",
    "prettier": "prettier --write ./**/*.ts",
    "build": "npx tsc scripts/codegen.ts --downlevelIteration --declaration",
    "sizer": "forge build --sizes"
  },
  "author": "GRVT <engineers@grvt.io>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@metamask/eth-sig-util": "^6.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^11.1.1",
    "@typechain/hardhat": "^6.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.7",
    "chai": "^4.3.7",
    "eip712-codegen": "^6.0.8",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.6.6",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "keymirror": "^0.1.1",
    "prettier": "^3.0.1",
    "prettier-plugin-solidity": "^1.1.3",
    "signtypeddata-v5": "^5.0.1",
    "solhint": "^3.4.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6",
    "yargs": "^17.7.2"
  }
}
