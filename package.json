{
  "name": "grvtex",
  "version": "0.0.1",
  "description": "GRVT Exchange Smart Contract",
  "type": "commonjs",
  "author": "GRVT <engineers@grvt.io>",
  "license": "UNLICENSED",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "solhint -f table src/**/*.sol --ignore-path .solhintignore",
    "lint:quiet": "solhint -q src/**/*.sol",
    "codegen:sol": "yarn build && node scripts/geneip712.js",
    "codegen:go": "yarn build && node scripts/gengoeip712.js",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "forge": "forge test",
    "prettier:check": "prettier --check --plugin=prettier-plugin-solidity src/**/*.sol",
    "prettier:sol": "prettier --write --plugin=prettier-plugin-solidity src/**/*.sol",
    "prettier": "prettier --write ./**/*.ts",
    "build": "npx tsc scripts/codegen.ts --downlevelIteration --declaration",
    "sizer": "forge build --sizes",
    "deploy": "hardhat deploy-zksync --script deploy.ts",
    "interact": "hardhat deploy-zksync --script interact.ts",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "^0.6.5",
    "@matterlabs/hardhat-zksync-node": "^0.0.1-beta.6",
    "@matterlabs/hardhat-zksync-solc": "^0.4.2",
    "@matterlabs/hardhat-zksync-verify": "^0.2.1",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@metamask/eth-sig-util": "^6.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@typechain/ethers-v5": "^11.1.2",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.5.0",
    "chai": "^4.3.10",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-preprocessor": "^0.1.5",
    "keymirror": "^0.1.1",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "prettier-plugin-solidity": "^1.1.3",
    "signtypeddata-v5": "^5.0.1",
    "solhint": "^3.6.1",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^4.9.5",
    "zksync-ethers": "^5.0.0",
    "zksync-web3": "^0.14.3"
  }
}
